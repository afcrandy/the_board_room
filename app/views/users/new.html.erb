<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<%= form_for(@user) do |f| %>
			<%= render 'fields', f: f %>
			<%= f.submit "Submit", class: "btn btn-default btn-lg" %>
		<% end %>

		<small>Already a member? <%= link_to "Log in", '#' %></small>
	</div>
</div>
